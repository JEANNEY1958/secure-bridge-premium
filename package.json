{
  "name": "secure-bridge-premium",
  "version": "1.0.0",
  "description": "Secure Bridge Premium - Local API key storage and trade execution for Xchange Suite ETF100",
  "main": "dist/main/index.js",
  "author": "Xchange Suite",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "tsc && npm run copy-renderer",
    "copy-renderer": "node scripts/copy-renderer.js",
    "dev": "npm run build && electron .",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.0.0",
    "electron-store": "^8.1.0",
    "node-machine-id": "^1.1.12",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.xchange-suite.secure-bridge",
    "productName": "Secure Bridge Premium",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "category": "public.app-category.finance",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Finance",
      "artifactName": "${productName}-${version}-linux.${ext}"
    }
  }
}
