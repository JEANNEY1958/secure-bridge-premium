{
  "name": "secure-bridge-premium",
  "version": "1.0.0",
  "description": "Secure Bridge Premium - Local API key storage and trade execution for Xchange Suite ETF100",
  "main": "dist/main/index.js",
  "author": "Xchange Suite",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "tsc",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');function copy(s,d){if(fs.statSync(s).isDirectory()){fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).forEach(f=>copy(path.join(s,f),path.join(d,f)))}else{fs.copyFileSync(s,d)}}copy('src/renderer','dist/renderer')\"",
    "dev": "npm run build && electron .",
    "package": "electron-builder"
  },
  "dependencies": {
    "@alpacahq/alpaca-trade-api": "^3.0.0",
    "electron-store": "^8.1.0",
    "node-machine-id": "^1.1.12",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.xchange-suite.secure-bridge",
    "productName": "Secure Bridge Premium",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Finance"
    }
  }
}
